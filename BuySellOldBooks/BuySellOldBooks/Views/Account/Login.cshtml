@model BuySellOldBooks.Models.LoginModel

@{
    Layout = null;
    ViewBag.Title = "Login";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>@ViewBag.Title - BookDesk.in</title>
    <link href="~/Content/CustomStylesheet.css" rel="stylesheet" type="text/css" />
</head>
<body id="body">
    <table width="100%" border="0" cellspacing="0" cellpadding="0">
        <tr>
            <td align="center">
                <table width="73%" border="0" cellspacing="0" cellpadding="0">
                    <tr>
                        <td>
                            <table width="100%" border="0" cellspacing="0" cellpadding="0">
                                <tr>
                                    <td width="29%" height="85" valign="bottom" style="padding-bottom: 5px;">
                                        <a href="@Url.Action("SearchBooks","Book")"><img src="~/images/logo.png" width="256" height="64" style="border:none" /></a></td>
                                    <td width="71%" valign="top">
                                        <table width="100%" border="0" cellspacing="0" cellpadding="0">
                                            <tr>
                                                <td width="73%" align="right" valign="top">@Html.Partial("_LoginPartial")</td>
                                                <td width="27%" align="right">
                                                    <a href="@Url.Action("SearchBooks", "Book", new { SpecialStatus="1"})"><img src="~/images/top.png" width="162" height="76" style="border:none" /></a></td>
                                            </tr>
                                        </table>
                                    </td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                    <tr valign="top">
                        <td>
                            <table width="100%" border="0" cellspacing="0" cellpadding="0">
                                <tr>
                                    <td class="heading4" align="left">Login</td>
                                    <td colspan="2" valign="top">&nbsp;</td>
                                </tr>
                                <tr>

                                    <td width="100%" valign="top" align="center">
                                        <table width="99%" border="0" cellspacing="0" cellpadding="0">
                                            <tr>
                                                <td bgcolor="#ffffff">

                                                    <table align="center" valign="top" width="70%">
                                                        <tr>
                                                            <td align="center" valign="top">

                                                                <table width="45%" cellpadding="5" cellspacing="0">

                                                                    @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
                                                                    {
                                                                        @Html.AntiForgeryToken()
                                                                        @Html.ValidationSummary(true, null, new { @class = "ValidationSummaryMsgs" })
                                                                        <tr>
                                                                            <td align="left" colspan="2">&nbsp;</td>
                                                                        </tr>
                                                                        <tr>
                                                                            <td align="left" width="40%" class="text4">@Html.LabelFor(m => m.UserName):</td>
                                                                            <td align="left" width="60%">@Html.TextBoxFor(m => m.UserName, null, new { @class = "text_field_other" })
                                                                                @Html.ValidationMessageFor(m => m.UserName, null, new { @class = "validationMsgTextStyle" })</td>
                                                                        </tr>
                                                                        <tr>
                                                                            <td align="left" class="text4">@Html.LabelFor(m => m.Password):</td>
                                                                            <td align="left">@Html.PasswordFor(m => m.Password, new { @class = "text_field_other" })
                                                                                @Html.ValidationMessageFor(m => m.Password, null, new { @class = "validationMsgTextStyle" })</td>
                                                                        </tr>
                                                                        <tr>
                                                                            <td align="left" class="text4"></td>
                                                                            <td align="left" class="text5">@Html.CheckBoxFor(m => m.RememberMe) @Html.LabelFor(m => m.RememberMe, new { @class = "checkbox" })</td>
                                                                        </tr>
            
                                                                        <tr>
                                                                            <td></td>
                                                                            <td align="left">
                                                                                <input type="submit" value="Log In" class="button1" /></td>
                                                                        </tr>
                                                                        <tr>
                                                                            <td></td>
                                                                            <td align="left" class="text5">@Html.ActionLink("Register", "Register", null, new { @class = "link_button2" }) if you don't have an account. </td>
                                                                        </tr>
                                                                    }
                                                                </table>
                                                            </td>
                                                        </tr>
                                                    </table>
                                                </td>
                                            </tr>
                                        </table>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="heading2">&nbsp;</td>
                                </tr>
                                <tr>
                                    <td align="center">@Html.Partial("_Footer")</td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                    <tr>
                        <td>&nbsp;</td>
                    </tr>
                </table>
        </body>
</html>
