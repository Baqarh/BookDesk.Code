@model BuySellOldBooks.Models.LocalPasswordModel

@using (Html.BeginForm("Manage", "Account"))
{
    @Html.AntiForgeryToken()
  
    <table width="70%" cellpadding="5" cellspacing="0">
        <tr><td colspan="2" align="left"><h2>Change Password and Profile Information</h2></td></tr>

        <tr>
            <td align="left" class="text4" width="40%">@Html.LabelFor(m => m.OldPassword)</td>
            <td align="left" width="60%">
                @Html.PasswordFor(m => m.OldPassword, new { @class = "text_field_other" })
                @Html.ValidationMessageFor(m => m.OldPassword, null, new { @class = "validationMsgTextStyle" })
            </td>
        </tr>
        <tr>
            <td align="left" class="text4" width="40%">@Html.LabelFor(m => m.NewPassword)</td>
            <td align="left" width="60%">
                @Html.PasswordFor(m => m.NewPassword, new { @class = "text_field_other" })
                @Html.ValidationMessageFor(m => m.NewPassword, null, new { @class = "validationMsgTextStyle" })
            </td>
        </tr>
        <tr>
            <td align="left" class="text4" width="40%">@Html.LabelFor(m => m.ConfirmPassword)</td>
            <td align="left" width="60%">@Html.PasswordFor(m => m.ConfirmPassword, new { @class = "text_field_other" })</td>
        </tr>
        <tr>
            <td width="40%">&nbsp;</td>
            <td align="left" width="60%">
                <input type="submit" value="Change password" style="background-color:#1c2641;color:#ffffff; border:none; padding:4px 15px;font-family:Arial, Helvetica, sans-serif; font-size:11px;text-decoration:none;cursor:pointer;" />
            </td>
        </tr>
    </table>
}