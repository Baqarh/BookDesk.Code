@model BuySellOldBooks.Models.Book
@{
    Layout = null;
}

<link href="@Url.Content("~/Content/themes/base/minified/jquery-ui.min.css")" rel="stylesheet" type="text/css" />
<script src="@Url.Content("~/Scripts/jquery-1.7.1.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery-ui-1.8.20.min.js")" type="text/javascript"></script>

<!DOCTYPE html>
<html lang="en">
<div id="dialog-confirm" style="display: none">
    <p>
        <span class="ui-icon ui-icon-alert" style="float: left; margin: 0 7px 20px 0;"></span>
        Are you sure to delete ?
    </p>
</div>
<div id="dialog-edit" style="display: none">
</div>
<div id="dialog-view" style="display: none">
</div>

<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>@ViewBag.Title - Buy Sell Old Books</title>
    <link href="~/Content/CustomStylesheet.css" rel="stylesheet" type="text/css" />
</head>

<body id="body">
                <table width="100%" border="0" cellspacing="5" cellpadding="5" style="background-color:#ffffff;">
              <tr>
                <td align="right" valign="top" >
        @using (Html.BeginForm("SendEmailMessage", "EmailMessage",FormMethod.Post))
        {
            <table align="center" cellpadding="1" cellspacing="0">
                <tr>
                    <td class="text4">To:</td>
                    @{
                        string mailIdOfUser =  ViewBag.UserMailId;
                    
                    <td>@Html.TextBox("txtTo",mailIdOfUser,null, new {@disabled="true", @style="width:400px;font-family:Arial, Helvetica, sans-serif;font-size:12px;" })</td> }
                </tr>
                <tr>
                    <td class="text4">Subject:</td>
                    <td>@Html.TextBox("txtSubject","Notification from BookDesk.in || Buy-Sell Old Books", null, new {@disabled="true", @style="width:400px;font-family:Arial, Helvetica, sans-serif;font-size:12px;" })</td>
                </tr>
                <tr>
                    <td></td>
                    <td></td>
                </tr>
                <tr>
                   <td valign="top" class="text4">Message:</td>
                    @{
            BuySellOldBooks.Models.Book bookDetail = ViewBag.BookDetailToSend;
            string title = bookDetail.Title;
            string author = bookDetail.Author;
            string edition = bookDetail.Edition;
            string formattedBookDetailToSend = "Hello, I want to purchase your book that you have uploaded on BookDesk.in                                                                         	 Title:"+title+",    Author:"+author+",	Edition:"+edition;
                   <td>@Html.TextArea("txtMessage",formattedBookDetailToSend, new {@disabled="true", @style="width:400px;height:120px;font-family:Arial, Helvetica, sans-serif;font-size:12px;" })</td>}
                </tr>
               
                <tr>
                <td class="text4">Enter Your MailID/Phone:</td>
                    @{
                    <td>  @using (Html.BeginForm("SendEmailMessage", "EmailMessage"))
                          {
                            @Html.TextBox("buyerContact",null, new { @style="width:400px;font-family:Arial, Helvetica, sans-serif;font-size:12px;" })
                          }</td> }
                </tr>
                <tr>
                   <td></td>
                   <td align="right"><input type="submit" value="Send E-Mail Message"  style="background-color:#1c2641;color:#ffffff; border:none; padding:4px 15px;font-family:Arial, Helvetica, sans-serif; font-size:11px;text-decoration:none;cursor:pointer;"/>
                </td>
                </tr>
                <tr><td>&nbsp;</td><td>&nbsp;</td></tr>
                <tr><td>&nbsp;</td><td>&nbsp;</td></tr>  
            </table>
        }
</td>
              </tr>
            </table>
        </body>
</html>
