    HtmlHelper.ClientValidationEnabled = true;
          <tr>
              <td align="left" colspan="2">&nbsp;</td>
          </tr>
           <tr>
                 @Html.HiddenFor(model => model.BookID)
            </tr>
        <tr>
                 @Html.HiddenFor(model => model.UserId)
            </tr>
        <tr>
                 @Html.HiddenFor(model => model.IsActive)
            </tr>
        
            <tr>
                <td align="left" class="text4">@Html.LabelFor(model => model.Title)</td>
                <td align="left" style="width:400px"> @Html.TextBoxFor(model => model.Title, new {style = "width:400px"})
                                    @Html.ValidationMessageFor(model => model.Title)</td>
            </tr>
        <tr>
                <td align="left" class="text4">@Html.LabelFor(model => model.Publisher)</td>
                <td align="left">@Html.TextBoxFor(model => model.Publisher, new {style = "width:400px"})
                                    @Html.ValidationMessageFor(model => model.Publisher)</td>
            </tr>
        <tr>
                <td align="left" class="text4">@Html.LabelFor(model => model.Author)</td>
                <td align="left"> @Html.TextBoxFor(model => model.Author, new {style = "width:400px"})
                                    @Html.ValidationMessageFor(model => model.Author)</td>
            </tr>
        
        <tr>
                <td align="left" class="text4">@Html.LabelFor(model => model.Edition)</td>
                <td align="left">             @Html.DropDownListFor(model => model.Edition, ViewData["editionList"] as SelectList)
            @Html.ValidationMessageFor(model => model.Edition)</td>
            </tr>
        <tr>
                <td align="left" class="text4">@Html.LabelFor(model => model.Category)</td>
                <td align="left"> @Html.DropDownListFor(model => model.Category, ViewData["bookCategory"] as SelectList)
            @Html.ValidationMessageFor(model => model.Category)</td>
            </tr>
        <tr>
                <td align="left" class="text4">@Html.LabelFor(model => model.Year)</td>
                <td align="left"> @Html.TextBoxFor(model => model.Year, new {style = "width:400px"})
                                    @Html.ValidationMessageFor(model => model.Year)</td>
            </tr>
        <tr>
                <td align="left" class="text4">@Html.LabelFor(model => model.Locality)</td>
                <td align="left"> @Html.TextBoxFor(model => model.Locality, new {style = "width:400px"})
            @Html.ValidationMessageFor(model => model.Locality)</td>
            </tr>
        <tr>
                <td align="left" class="text4">@Html.LabelFor(model => model.City)</td>
                <td align="left"> @Html.TextBoxFor(model => model.City, new {style = "width:400px"})
            @Html.ValidationMessageFor(model => model.City)</td>
            </tr>
        <tr>
                <td align="left" class="text4">@Html.LabelFor(model => model.Price)</td>
                <td align="left"> @Html.TextBoxFor(model => model.Price, new {style = "width:400px"})
            @Html.ValidationMessageFor(model => model.Price)</td>
            </tr>
            <tr>              
            </tr>         
        <tr>
                <td align="center" colspan="2">
            <input type="submit" value="Save" style="background-color:#1c2641;color:#ffffff; border:none; padding:4px 15px;font-family:Arial, Helvetica, sans-serif; font-size:11px;text-decoration:none;cursor:pointer;"/>
            @Html.ActionLink("Cancel","MyAccount", "Account", null, new { @style = "background-color:#1c2641;color:#ffffff; border:none; padding:4px 15px;font-family:Arial, Helvetica, sans-serif; font-size:11px;text-decoration:none;cursor:pointer;"})
        </td>
