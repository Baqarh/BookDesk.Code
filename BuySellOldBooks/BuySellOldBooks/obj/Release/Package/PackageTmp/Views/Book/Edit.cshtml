<table width="45%" cellpadding="5" cellspacing="0" >
    @using (Html.BeginForm()) {
    @Html.AntiForgeryToken()                //AntiForgeryToken is used for token varification to prevent from a Sequrity Threat- CSRF (Cross Site Request Forgery)
