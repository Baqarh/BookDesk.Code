@{
    ViewBag.Title = "Edit";
    Layout = null;
}

<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>@ViewBag.Title - BookDesk</title>
    <link href="~/Content/CustomStylesheet.css" rel="stylesheet" type="text/css" />
</head>
   
<body id="body">
